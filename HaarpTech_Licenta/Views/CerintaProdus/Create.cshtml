@model HaarpTech_Licenta.Models.CerintaProdus

@{
    ViewData["Title"] = "Adaugă Cerință Produs";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 fw-bold text-primary">@ViewData["Title"]</h1>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="bi bi-arrow-left-circle"></i> Înapoi la listă
        </a>
    </div>

    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="card-title mb-0"><i class="bi bi-plus-circle"></i> Formular Cerință Produs</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" class="row g-3">

                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.ID_CERERE)
                @Html.HiddenFor(Model => Model.ID_CERINTA)
                @Html.HiddenFor(Model => Model.ID_ANGJAT)

                @* <div class="col-md-6"> *@
                @*     <label asp-for="DataElaborare" class="form-label">Data Elaborare</label> *@
                @*     <input asp-for="DataElaborare" type="datetime-local" class="form-control" /> *@
                @*     <span asp-validation-for="DataElaborare" class="text-danger small"></span> *@
                @* </div> *@
                <div class="col-12">
                    <label asp-for="DescriereDetaliata" class="form-label">Descriere Detaliată</label>
                    <textarea asp-for="DescriereDetaliata" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="DescriereDetaliata" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Prioritate" class="form-label">Prioritate</label>
                    <select asp-for="Prioritate" class="form-select">
                        <option value="">-- Selectează --</option>
                        <option>Critică</option>
                        <option>Ridicată</option>
                        <option>Medie</option>
                        <option>Scăzută</option>
                    </select>
                    <span asp-validation-for="Prioritate" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="StatusCerinta" class="form-label">Status Cerință</label>
                    <select asp-for="StatusCerinta" class="form-select">
                        <option value="">-- Selectează --</option>
                        <option>Nouă</option>
                        <option>În lucru</option>
                        <option>Rezolvată</option>
                        <option>Respinsă</option>
                        <option>Amânată</option>
                    </select>
                    <span asp-validation-for="StatusCerinta" class="text-danger small"></span>
                </div>

                <div class="col-12 d-flex justify-content-end">
                    @*aici problema*@
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-save me-2"></i>Salvează
                    </button>
                    <a asp-controller="CerintaProdus" asp-action="Index"class ="btn btn-outline-secondary">
                        <i class="fas fa-edit me-2"></i>Anulează
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #e4edf5 100%);
        min-height: 100vh;
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
        border: none;
    }

    .form-label {
        font-weight: 600;
        color: #0d6efd;
    }

    .form-control, .form-select, .form-control:focus, .form-select:focus {
        box-shadow: none;
        border-radius: 0.5rem;
    }

    .btn-lg {
        border-radius: 0.75rem;
    }
</style>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
