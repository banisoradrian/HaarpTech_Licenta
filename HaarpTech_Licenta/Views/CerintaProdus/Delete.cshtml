@model HaarpTech_Licenta.Models.CerintaProdus
@{
    ViewData["Title"] = "Ștergere Cerință Produs";
}

<div class="container mt-5">
    <div class="alert alert-warning">
        <h4><i class="bi bi-exclamation-triangle"></i> Ești sigur că vrei să ștergi această cerință?</h4>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Data Elaborare</dt>
                <dd class="col-sm-9">@Model.DataElaborare.ToString("g")</dd>

                <dt class="col-sm-3">Descriere</dt>
                <dd class="col-sm-9">@Model.DescriereDetaliata</dd>

                <dt class="col-sm-3">Prioritate</dt>
                <dd class="col-sm-9">@Model.Prioritate</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.StatusCerinta</dd>
            </dl>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.ID_CERINTA)
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Confirmă Ștergerea</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Anulează</a>
            </form>
        </div>
    </div>
</div>
