@model HaarpTech_Licenta.Models.RaportCerinta

@{
    ViewData["Title"] = "Detalii Raport Cerință";
}

<div class="card shadow">
    <div class="card-header bg-info text-white">
        <h4 class="mb-0">@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <dl class="row">


            <dt class="col-sm-3">Status :</dt>
            <dd class="col-sm-9"><span class="badge bg-primary">@Model.StatusRaport</span></dd>

            <dt class="col-sm-3">Prioritate :</dt>
            <dd class="col-sm-9"><span class="badge bg-warning text-dark">@Model.Prioritate</span></dd>

            <dt class="col-sm-3">Status Oferta :</dt>
            <dd class="col-sm-9"><span class="badge bg-warning text-dark">@Model.StatusOferta</span></dd>

            <dt class="col-sm-3">Status Resurse :</dt>
            <dd class="col-sm-9"><span class="badge bg-warning text-dark">@Model.StatusResurse</span></dd>

            <dt class="col-sm-3">Descriere :</dt>
            <dd class="col-sm-9">@Model.Descriere</dd>
        </dl>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.ID_RAPORT" class="btn btn-primary me-2"><i class="fas fa-edit me-2"></i>Editează</a>
            <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-list me-2"></i>Toate rapoartele</a>
        </div>
    </div>
</div>