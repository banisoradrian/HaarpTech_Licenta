@model HaarpTech_Licenta.Models.Angajat
@{
    ViewData["Title"] = "Ștergere Tichet";
    string numeComplet = Model.Prenume + " " + Model.Nume;
}

<h2>Confirmare Ștergere Ședință</h2>
<div class="alert alert-danger">

    <p>Sigur doriți să ștergeți Angajatul: <strong>@numeComplet</strong> </p>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ID_ANGAJAT" />
    <button type="submit" class="btn btn-danger">Șterge</button>
    <a asp-action="Index" class="btn btn-secondary">Anulează</a>
</form>


