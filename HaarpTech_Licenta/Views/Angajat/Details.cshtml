@model HaarpTech_Licenta.Models.Angajat

@{
    ViewData["Title"] = "Detalii Angajat";
}

<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 text-primary">
            <i class="fas fa-user me-2"></i>@ViewData["Title"]
        </h1>
        <div class="btn-group">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Înapoi la listă
            </a>
            @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
            {
                <a asp-action="Edit" asp-route-id="@Model.ID_ANGAJAT" class="btn btn-outline-warning">
                    <i class="fas fa-edit me-2"></i>Editează
                </a>
            }
        </div>
    </div>

    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">@($"{Model.Nume} {Model.Prenume}")</h5>
                <span class="badge bg-info">
                    Angajat
                </span>
            </div>
        </div>

        <div class="card-body">
            <div class="row g-4">
                <!-- Informații de bază -->
                <div class="col-md-8">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Email:</dt>
                                <dd class="col-sm-7">@Model.Email</dd>

                                <dt class="col-sm-5">Telefon:</dt>
                                <dd class="col-sm-7">@Model.Telefon</dd>

                                <dt class="col-sm-5">Data Angajării:</dt>
                                <dd class="col-sm-7">@Model.DataAngajare.ToString("dd MMM yyyy")</dd>
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">CNP:</dt>
                                <dd class="col-sm-7">@Model.Cnp</dd>

                                <dt class="col-sm-5">Serie Nr. CI:</dt>
                                <dd class="col-sm-7">@Model.SerieNr</dd>

                                <dt class="col-sm-5">Localitate / Țară:</dt>
                                <dd class="col-sm-7">@Model.Localitate, @Model.Tara</dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Descriere salariu & poziție -->
                    <div class="mt-4">
                        <h6 class="text-muted mb-3 border-bottom pb-2">Detalii Angajat</h6>
                        <div class="bg-light p-3 rounded-2">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Departament:</dt>
                                <dd class="col-sm-8">@Model.Departament</dd>

                                <dt class="col-sm-4">Poziție:</dt>
                                <dd class="col-sm-8">@Model.Pozitie</dd>

                                <dt class="col-sm-4">Salariu:</dt>
                                <dd class="col-sm-8 fw-bold">@Model.Salariu.ToString("C2")</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <!-- Sidebar cu alte informații -->
                <div class="col-md-4">
                    <div class="bg-light p-3 rounded-3 h-100">
                        <h6 class="text-muted mb-3 border-bottom pb-2">Identificator</h6>
                        <dl class="mb-0">
                            <dt>ID Angajat:</dt>
                            <dd class="mb-0">@Model.ID_ANGAJAT</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 15px;
            transition: transform 0.2s;
        }

        dt {
            font-weight: 500;
            color: #6c757d;
        }

        dd {
            color: #343a40;
            margin-bottom: 0.5rem;
        }

        .badge {
            font-size: 0.85em;
            padding: 0.5em 0.75em;
            min-width: 90px;
        }

        .bg-light {
            background-color: #f8f9fa !important;
        }
    </style>
}
