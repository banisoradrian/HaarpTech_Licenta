@model HaarpTech_Licenta.Models.Sedinta
@{
    ViewData["Title"] = "Ștergere Ședință";
}

<h2>Confirmare Ștergere Ședință</h2>
<div class="alert alert-danger">
    <p>Sigur doriți să ștergeți ședința: <strong>@Model.Subiect</strong> programată la <strong>@Model.DataSedinta.ToString("dd.MM.yyyy HH:mm")</strong>?</p>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ID_SEDINTA" />
    <button type="submit" class="btn btn-danger">Șterge</button>
    <a asp-action="Index" class="btn btn-secondary">Anulează</a>
</form>


