@model HaarpTech_Licenta.Models.ClientData
@{
    ViewData["Title"] = "Ștergere Datele Clientului";
}

<h2>Confirmare Ștergere Ședință</h2>
<div class="alert alert-danger">
    @if (Model != null)
    {
        <p>Sigur doriți să ștergeți datele pentru: <strong>@Model.DenumireFiscala</strong> </p>
    }
    else
    {
        <p>Datele clientului nu au putut fi încărcate pentru confirmare. Vă rugăm să încercați din nou.</p>
    }
</div>

<form asp-action="Delete" method="post">
    @if (Model != null)
    {
        <input type="hidden" asp-for="ID_CLIENT" />
    }
    <button type="submit" class="btn btn-danger">Șterge</button>
    <a asp-action="Index" class="btn btn-secondary">Anulează</a>
</form>