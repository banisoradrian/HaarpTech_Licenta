@model HaarpTech_Licenta.Models.NotaComanda

@{
    ViewData["Title"] = "Ștergere Notă Comandă";
}

<div class="container mt-5">
    <div class="alert alert-warning">
        <h4><i class="bi bi-exclamation-triangle"></i> Ești sigur că vrei să ștergi această notă de comandă?</h4>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Denumire</dt>
                <dd class="col-sm-9">@Model.Denumire</dd>

                <dt class="col-sm-3">Destinatar</dt>
                <dd class="col-sm-9">@Model.Destinatar</dd>

                <dt class="col-sm-3">Data Notei</dt>
                <dd class="col-sm-9">@Model.DataNota.ToString("g")</dd>

                <dt class="col-sm-3">Data Emiterii</dt>
                <dd class="col-sm-9">@Model.DataEmiterii.ToString("g")</dd>

                <dt class="col-sm-3">Preț Total (cu TVA)</dt>
                <dd class="col-sm-9">@Model.PretTotalTva.ToString("C2")</dd>
            </dl>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ID_NOTA_COMANDA)
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirmă Ștergerea
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Anulează</a>
            </form>
        </div>
    </div>
</div>
