@{
    ViewData["Title"] = "HAARP TECH";
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #007bff; /* Albastru primar */
            --secondary-color: #6c757d; /* Gri secundar */
            --text-color: #343a40; /* Culoare text */
            --background-light: #f8f9fa; /* Fundal deschis */
            --background-dark: #212529; /* Fundal închis pentru animație */
            --sun-color: #ffe082; /* Culoarea soarelui */
            --sun-glow: #ffc107; /* Glow pentru soare */
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: var(--text-color);
            line-height: 1.6;
        }

        /* Hero Section */
        /* Hero Section */
        .hero-section {
            position: relative;
            height: 45vh; /* Ajustează înălțimea */
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
            overflow: hidden; /* Asigură că ploaia și soarele nu depășesc */
            background-color: var(--background-dark); /* Fundal închis pentru contrast cu ploaia */
        }

        .hero-content {
            z-index: 10;
            position: relative;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        }

            .hero-content h1 {
                font-size: 3.8em;
                margin-bottom: 0.2em;
                font-weight: 700;
            }

            .hero-content p {
                font-size: 1.5em;
                max-width: 800px;
                margin: 0 auto 1.5em auto;
            }

        .btn-custom {
            background-color: var(--primary-color);
            color: white;
            border: none;
            padding: 0.8em 2em;
            font-size: 1.1em;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #0056b3;
                color: white;
            }

        /* Rain and Sun Animation */
        .rain {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 5;
            opacity: 0; /* Începe invizibil */
            transition: opacity 1.5s ease-in-out;
        }

            .rain.active {
                opacity: 1;
            }

        .drop {
            position: absolute;
            background: rgba(173, 216, 230, 0.6); /* Light blue */
            width: 2px;
            height: 20px;
            border-radius: 50%;
            animation: rainFall 0.8s linear infinite;
        }

        @@keyframes rainFall {
            0% {
                transform: translateY(-100px);
                opacity: 0;
            }

            20% {
                opacity: 1;
            }

            100% {
                transform: translateY(100vh);
                opacity: 0;
            }
        }

        /* Updated Sun Styles - Smaller and Positioned on Right */
        .sun {
            position: absolute;
            width: 60px; /* Smaller size */
            height: 60px; /* Smaller size */
            background: radial-gradient(circle, var(--sun-color), var(--sun-glow));
            border-radius: 50%;
            top: 10%; /* Positioned higher */
            right: 5%; /* Positioned on right */
            transform: scale(0); /* Începe mic și invizibil */
            box-shadow: 0 0 30px 15px rgba(255, 193, 7, 0.7);
            z-index: 6;
            opacity: 0;
            transition: transform 1.5s ease-out, opacity 1.5s ease-out;
        }

            .sun.active {
                transform: scale(1); /* Scale to normal size */
                opacity: 1;
            }

            /* Sun rays animation */
            .sun::after {
                content: "";
                position: absolute;
                top: 50%;
                left: 50%;
                width: 100%;
                height: 100%;
                background: radial-gradient(circle, transparent 50%, rgba(255, 255, 255, 0.2) 70%);
                border-radius: 50%;
                transform: translate(-50%, -50%);
                animation: sunRays 3s infinite linear;
            }

        @@keyframes sunRays {
            0% {
                transform: translate(-50%, -50%) rotate(0deg);
            }

            100% {
                transform: translate(-50%, -50%) rotate(360deg);
            }
        }

        /* General Sections */
        .section-padding {
            padding: 60px 0;
        }

        .section-title {
            text-align: center;
            margin-bottom: 50px;
            font-size: 2.5em;
            color: var(--primary-color);
            font-weight: 600;
        }

        .card {
            border: none;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
            height: 100%; /* Asigură că cardurile au înălțime egală */
            position: relative;
            overflow: hidden;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.15);
            }

        .card-body {
            padding: 25px;
        }

        .card-title {
            font-size: 1.5em;
            color: var(--primary-color);
            margin-bottom: 15px;
            display: flex;
            align-items: center;
        }

        /* Icon styles with hover animation */
        .service-icon {
            display: inline-block;
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, var(--primary-color), #0056b3);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .card:hover .service-icon {
            transform: translateY(-5px) scale(1.1);
            box-shadow: 0 8px 15px rgba(0,0,0,0.2);
         
        }

        .technology-badge {
            display: inline-block;
            background-color: var(--primary-color);
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            margin-right: 5px;
            margin-bottom: 5px;
            font-size: 0.85em;
            transition: all 0.3s ease;
        }

        .card:hover .technology-badge {
           
            transform: translateY(-3px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        /* Contact form animation */
        .form-control:focus {
            box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25);
            
        }

        .logo-img-home {
            width: 350px;
            height: 120px;
            margin-bottom: 15px;
            /* transformă pixelii negri în albi */
            filter: brightness(0) invert(1);
        }
    </style>
</head>
