@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-9">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="row">
                <div class="col-md-6 mb-3 form-floating">
                    <input asp-for="Input.LastName" class="form-control" autocomplete="family-name" placeholder="Nume" />
                    <label asp-for="Input.LastName">Nume</label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3 form-floating">
                    <input asp-for="Input.FirstName" class="form-control" autocomplete="given-name" placeholder="Prenume" />
                    <label asp-for="Input.FirstName">Prenume</label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3 form-floating">
                    <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>

                <div class="col-md-6 mb-3 form-floating">
                    <input asp-for="Input.Country" class="form-control" autocomplete="country" placeholder="Țară" />
                    <label asp-for="Input.Country">Țară</label>
                    <span asp-validation-for="Input.Country" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3 form-floating">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Telefon" />
                    <label asp-for="Input.PhoneNumber">Telefon</label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3 form-floating">
                    <input asp-for="Input.CompanyName" class="form-control" autocomplete="organization" placeholder="Numele companiei" />
                    <label asp-for="Input.CompanyName">Numele companiei</label>
                    <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-floating mb-3">
                    <textarea asp-for="Input.CompanyDescription" class="form-control" placeholder="Descrierea companiei" style="height: 150px;"></textarea>
                    <label asp-for="Input.CompanyDescription">Descrierea companiei</label>
                    <span asp-validation-for="Input.CompanyDescription" class="text-danger"></span>
                </div>
            

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Salvați</button>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
