@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    string s = "Parola123!@";
}

@section Styles {
    <style>
        body 
        {
            background-color: #f5f5f5;
        }

        .logo-img {
            width: 350px;
            height: 120px;
            margin-bottom: 15px;
        }
    </style>
}

<div class="row d-flex justify-content-center text-center">
    <div class="col-md-4">
                <img src="~/images/HaarpTechLogo1.png" asp-append-version="true" alt="Logo Haarp Tech" class="logo-img"/>
                <br />
        <section>
            <form id="account" method="post">
                <h2>Folosește un cont deja existent</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nume@domeniu.ro" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Parola" />
                    <label asp-for="Input.Password" class="form-label">Parola</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Conectează-te</button>
                </div>
                <div>
                  @*   <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Ai uitat parola?</a>
                    </p> *@ 
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Creeaă un cont nou</a>
                    </p>

                    <a href="" onclick="alert(
                                                'Serviciul de hosting pentru scimbarea parolei este indisponibil ! \n \n' +
                                                'Va rugam sa contactati un admin pentru resetarea parolei'
                                              )"
                       style="cursor: pointer;">
                       Ai uitat parola?
                    </a>

@*                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>  *@
                </div>
            </form>
        </section>
    </div>
 
    <p>@s</p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
