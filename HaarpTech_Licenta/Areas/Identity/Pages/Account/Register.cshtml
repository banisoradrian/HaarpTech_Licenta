@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@section Styles 
{
    <style>
        body 
        {
            background-color: #f5f5f5;
        }

         .logo-img{
            width: 350px;
            height: 120px;
            margin-bottom: 15px; 
         }
    </style>
}
<div class="row d-flex justify-content-center text-center">
    <div class="col-md-9">
          <img src="~/images/HaarpTechLogo1.png" asp-append-version="true" alt="Logo Haarp Tech" class="logo-img"/>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Creează un cont</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="row">
                <div class="col-md-6 mb-3 form-floating">
                    <input asp-for="Input.FirstName" class="form-control" autocomplete="given-name" placeholder="Prenume" />
                    <label asp-for="Input.FirstName">Prenume</label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3 form-floating">
                    <input asp-for="Input.LastName" class="form-control" autocomplete="family-name" placeholder="Nume" />
                    <label asp-for="Input.LastName">Nume</label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3 form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="nume@domeniu.ro" />
                    <label asp-for="Input.Email">Adresă de email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3 form-floating">
                    <input asp-for="Input.Country" class="form-control" autocomplete="country" placeholder="Țară (Opțional)" />
                    <label asp-for="Input.Country">Țară</label>
                    <span asp-validation-for="Input.Country" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3 form-floating">
                    <input asp-for="Input.CompanyName" class="form-control" autocomplete="organization" placeholder="Numele companiei (Opțional)" />
                    <label asp-for="Input.CompanyName">Numele companiei</label>
                    <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3 form-floating">
                    <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="tel" placeholder="Număr de telefon" />
                    <label asp-for="Input.PhoneNumber">Număr de telefon</label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3 form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Parolă" />
                    <label asp-for="Input.Password">Parolă</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3 form-floating">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirmă parola" />
                    <label asp-for="Input.ConfirmPassword">Confirmă parola</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>


            <div class="form-floating mb-3">
                <textarea asp-for="Input.CompanyDescription" class="form-control" placeholder="Descrierea companiei (Opțional)" style="height: 150px;"></textarea>
                <label asp-for="Input.CompanyDescription">Descrierea companiei</label>
                <span asp-validation-for="Input.CompanyDescription" class="text-danger"></span>
            </div>

           
            <button id="registerSubmit" type="submit" class="w-50 btn btn-lg btn-primary">Înregistrează-te</button> <br />

            <div class="d-inline-flex p-3">
                <p>Ai deja un cont?</p>
                <a class="ms-2" asp-area="Identity" asp-page="/Account/Login">Conectează-te</a>
            </div>
        </form>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
